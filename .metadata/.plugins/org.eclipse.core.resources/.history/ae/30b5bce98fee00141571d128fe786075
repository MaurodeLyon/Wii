package main;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.Timer;

import wiiusej.values.RawAcceleration;

public class WiiMoteModel implements ActionListener {

	private WiiMoteView view;
	public RawAcceleration acceleration;
	private short X = 0,Y = 0,Z = 0; 

	public WiiMoteModel(WiiMoteView view) {
		this.view = view;
		acceleration = new RawAcceleration(0, 0, 0);
		new Timer(200, this).start();
	}

	public void actionPerformed(ActionEvent e) {
		X = acceleration.getX();
		Y = acceleration.getY();
		Z = acceleration.getZ();
		System.out.println(X + "\t" + Y + "\t" + Z);
	}
}
